@using ErenPinaz.Common.Helpers
@model Blogfolio.Web.Areas.Admin.ViewModels.ManageUserEditModel

@{
    ViewBag.Title = "Manage Account";
}

<section class="account">
    <h1 class="page-header">
        @ViewBag.Title
    </h1>

    <p class="text-info">
        @ViewBag.StatusMessage
    </p>

    @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <h3>
            User information
        </h3>

        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.EditorFor(m => m.UserName, new {htmlAttributes = new {@class = "form-control", @readonly = "readonly", placeholder = Html.DisplayNameFor(m => m.UserName)}})
                <p class="form-info">
                    @Html.DisplayDescriptionFor(m => m.UserName)
                </p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Name, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Name, new {htmlAttributes = new {@class = "form-control", placeholder = Html.DisplayNameFor(m => m.Name)}})
                <p class="form-info">
                    @Html.DisplayDescriptionFor(m => m.Name)
                </p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Email, new {htmlAttributes = new {@class = "form-control", placeholder = Html.DisplayNameFor(m => m.Email)}})
            </div>
        </div>

        <h3>
            Password management
        </h3>

        <div class="form-group">
            @Html.LabelFor(m => m.OldPassword, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.EditorFor(m => m.OldPassword, new {htmlAttributes = new {@class = "form-control", placeholder = Html.DisplayNameFor(m => m.OldPassword)}})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.EditorFor(m => m.NewPassword, new {htmlAttributes = new {@class = "form-control", placeholder = Html.DisplayNameFor(m => m.NewPassword)}})
                <p class="form-info">
                    @Html.DisplayDescriptionFor(m => m.NewPassword)
                </p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.EditorFor(m => m.ConfirmPassword, new {htmlAttributes = new {@class = "form-control", placeholder = Html.DisplayNameFor(m => m.ConfirmPassword)}})
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    }
</section>